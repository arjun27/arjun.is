---
pagination:
  data: collections.all
  size: 5
  alias: entries
layout: layouts/home.njk
permalink: /page-list/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber }}/{% endif %}
---
<table>
  <thead>
    <th>URL</th>
    <th>Page Title</th>
  </thead>
  <tbody>
{%- for entry in entries %}
  <tr>
    <td><a href="{{ entry.url }}"><code>{{ entry.url }}</code></a></td>
    <td>{{ entry.data.title }}</td>
  </tr>
{%- endfor %}
  </tbody>
</table>

{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Next page</a>{% endif %}
{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Previous page</a>{% endif %}